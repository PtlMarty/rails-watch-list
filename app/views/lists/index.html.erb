<div class="container">
  <h1>My movie list</h1>

  <% @lists.each do |list| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= list.name %></h5>
          <%= link_to "More ...", list_path(list.id) %>
        </div>
      </div>
  <% end %>

  <%= link_to "New List", new_list_path %>

</div>
